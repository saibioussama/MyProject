@model List<DAL.Departement>
@{
    ViewBag.Title = "Departements";
}


<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<br />

<a href="@Url.Action("Create","Departements")" class="btn btn-default pull-right">Add new departement ...</a>
<br />
<h2>All departements :</h2>
<br />
<table class="table table-hover table-bordered " style="background-color:white;">
    <thead>
        <tr>
            <th>
                Numero Departement :
            </th>
            <th>
                Nom de departement :
            </th>
            <th>
                Lieu :
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(p => item.NumDept)
                </td>
                <td>
                    @Html.DisplayFor(p => item.NomDept)
                </td>
                <td>
                    @Html.DisplayFor(p => item.Lieu)
                </td>

                <td>
                    <a href="@Url.Action("Edite","Departements",new { id=item.NumDept})" class="btn btn-success">Edite</a>
                    <a href="@Url.Action("Delete","Departements",new { id=item.NumDept})" class="btn btn-danger">Delete</a>
                    <a href="@Url.Action("Details","Departements",new { id=item.NumDept})" class="btn btn-info">Details</a>
                </td>

            </tr>
        }
    </tbody>
    
</table>


@section scripts{

    <script src="http://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
}

