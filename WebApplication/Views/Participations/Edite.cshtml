@model DAL.Participation
 @{
     ViewBag.Title = "Edite";
}

<h2>Edite</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Participation</h4>
        <hr />

        <div class="form-group dl-horizontal">
            <label class="control-label col-md-2" for="Id">Id :</label>
            <div class="col-md-10">
                <h4>@Model.Id</h4>
                <input type="hidden" name="Id" id="Id" value="@Model.Id" class="form-control" />
            </div>
        </div>

        <div class="form-group dl-horizontal">
            <label class="control-label col-md-2" for="_Employe.Matr">Employe :</label>
            <div class="col-md-10">
                <select name="_Employe.Matr" class="form-control">
                    @foreach (var item in DAL.Employe.Employes())
                    {
                        if (item.Matr == Model._Employe.Matr)
                        {
                            <option selected="selected">@item.Matr</option>
                        }
                        else
                        {
                            <option>@item.Matr</option>
                        }
                    }
                </select>
            </div>
        </div>

        <div class="form-group dl-horizontal">
            <label class="control-label col-md-2" for="_Projet.CodeP">Project :</label>
            <div class="col-md-10">
                <select name="_Projet.CodeP" class="form-control">
                    @foreach (var item in DAL.Projet.Projets())
                    {
                        if (item.CodeP == Model._Projet.CodeP)
                        {
                            <option selected="selected">@item.CodeP</option>
                        }
                        else
                        {
                            <option>@item.CodeP</option>
                        }
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Fonction">Fonction :</label>
            <div class="col-md-10">
                <input type="text" name="Fonction" value="@Model.Fonction" id="Fonction" class="form-control" />
            </div>
        </div>

        <div class="form-group ">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}