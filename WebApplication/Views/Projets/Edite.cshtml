@model DAL.Projet
@{
    ViewBag.Title = "Edite";
}

<h2>Edite</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Projet</h4>
        <hr /> 
        <div class="form-group">
           <label for="CodeP" class = "control-label col-md-2" >Code Project :</label>
            <div class="col-md-10">
                <h4>@Model.CodeP</h4>
                <input type="hidden" name="CodeP" id="CodeP" value="@Model.CodeP" class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <label for="NomP" class = "control-label col-md-2" >Project name:</label>
            <div class="col-md-10">
                <input type="text" name="NomP" id="NomP" class="form-control" value="@Model.NomP"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
 