@model DAL.Departement

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Departement</h4>
        <hr />
        <div class="form-group">
            <label for="NumDept" class="control-label col-md-2">Numero departemet :</label>
            <div class="col-md-10">
                <input type="number" name="NumDept" id="NumDept" class="form-control"   />
            </div>
        </div>

        <div class="form-group">
            <label for="NomDept" class="control-label col-md-2">Name Departement :</label>
            <div class="col-md-10">
                <input type="text" name="NomDept" id="NomDept" class="form-control"  />
            </div>
        </div>

        <div class="form-group">
            <label for="Lieu" class="control-label col-md-2">Lieu :</label>
            <div class="col-md-10">
                <input type="text" name="Lieu" id="Lieu" class="form-control"   />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

 