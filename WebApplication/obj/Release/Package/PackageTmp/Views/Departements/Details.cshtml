@model DAL.Departement

@{
    ViewBag.Title = "Details";
}



<div>

    <div style="background:white;margin-top:100px;" class="row">

        <span style="font-family:'Segoe MDL2 Assets';height:150px;width:150px;border-radius:50%;text-align:center;font-size:80px;position:absolute;top:110px;left:40px;background-color:white;border:10px solid #eee;color:gray;">
            
        </span>
        <div class="col-md-10 col-md-offset-2" style="padding:20px;">
            <div class="row">
                <div class="col-md-3">
                    <h4>Numero departement :</h4>
                </div>
                <div class="col-md-offset-3">
                    <h4><b><i>@Model.NumDept</i></b></h4>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-3">
                    <h4>Nom Departement :</h4>
                </div>
                <div class="col-md-offset-3">
                    <h4><b><i>@Model.NomDept</i></b></h4>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-3">
                    <h4>Lieu :</h4>
                </div>
                <div class="col-md-offset-3">
                    <h4><b><i>@Model.Lieu</i></b></h4>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div style="width:100%;">
    <a href="@Url.Action("Edite","Departements",new { id = Model.NumDept})" style="width:50%;" class="btn btn-primary btn-lg pull-left">Edite </a>
    <a href="@Url.Action("Delete","Departements",new { id = Model.NumDept})" style="width:50%;" class="btn btn-info 
btn-lg pull-right">Delete </a>
</div>


 