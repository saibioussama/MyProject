@model DAL.Participation
 @{
     ViewBag.Title = "Create";
}


<h2>Create</h2>

@using (Html.BeginForm()) 
{
    
    <div class="form-horizontal">
        <h4>Participation</h4>
        <hr />
        <div class="form-group">
            <label for="Id" class="control-label col-md-2">Id :</label>
            <div class="col-md-10">
                <input type="number" name="Id" id="Id" class="form-control"/>
            </div>
        </div>

        <div class="form-group">
          <label for="_Employe.Matr" class = "control-label col-md-2" >Employe :</label>
            <div class="col-md-10" >
                <select name="_Employe.Matr" class="form-control">
                    @foreach (var item in DAL.Employe.Employes())
                    {
                        <option>@item.Matr</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-2" for="_Projet.CodeP" >Project :</label>
            <div class="col-md-10">
                <select name="_Projet.CodeP" class="form-control">
                    @foreach (var item in DAL.Projet.Projets())
                    {
                        <option>@item.CodeP</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="Fonction" class = "control-label col-md-2" >Fonction :</label>
            <div class="col-md-10">
                <input type="text" class="form-control" name="Fonction" id="Fonction" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
 